.settings-box.hide-settings
    .toggle-settings
        i.fa.fa-gear.fa-lg.setting-color
    .setting-content.text-center
        .option-box.color-options
             h4 Color Options
             - var themes = ["green-theme", "blue-theme", "red-theme", "orange-theme", "purple-theme", "black-theme"]
             ul.list-unstyled
                each theme in themes
                    li(data-theme=theme)

        .option-box.font-options
            h4 Font Options
            - var fonts = ["open", "public", "roboto", "nanum"]
            select.form-control
                each font in fonts
                    option(value=font)=font + ' font'
                    
        .option-box
            h4 Sidebar Options